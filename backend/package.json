    "is-uuid": "^1.0.2",
    "nodemon": "^2.0.16",
    "pino": "^8.0.0",
    "pino-http": "^7.1.0",
    "zod": "^3.17.3",
    "zod-prisma": "^0.5.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/is-uuid": "^1.0.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.39",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.1",
    "prisma": "^3.14.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.2"
  }
